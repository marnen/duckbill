@font-face {
  font-family: 'Lora';
  font-style: normal;
  font-weight: 400;
  src: url(<%= File.join Rails.root, '/app/assets/fonts/lora/Lora-Regular.ttf' %>) format('truetype');
}
@font-face {
  font-family: 'Lora';
  font-style: bold;
  font-weight: 700;
  src: url(<%= File.join Rails.root, '/app/assets/fonts/lora/Lora-Bold.ttf' %>) format('truetype');
}