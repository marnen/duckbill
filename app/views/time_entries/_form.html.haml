= form_for time_entry, html: {class: :time_entry} do |f|
  .row
    .date
      = f.label :date
      = f.date_field :date
    .description
      = f.label :description
      = f.text_field :description
  .row
    .hours
      = f.label :hours
      = f.text_field :hours
    .notes
      = f.label :notes
      = f.text_area :notes

  .row.collapse
    = f.submit _('Save')