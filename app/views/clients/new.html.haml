= form_for @client do |f|
  - {name: nil, company: nil, email: _('E-mail address'), street: nil, city: nil, state: nil, zip: _('ZIP code')}.each do |field, label|
    %div{class: field}
      = f.label *[field, label].compact
      - if field == :email
        = f.email_field field
      - else
        = f.text_field field

  = f.submit _ 'Save'